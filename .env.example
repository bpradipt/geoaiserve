# GeoAI REST API Configuration
# Copy this file to .env and customize as needed

# Application Configuration
APP_NAME=GeoAI REST API
APP_VERSION=0.1.0
API_PREFIX=/api/v1
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Model Configuration
GEOAI_MODELS=sam,moondream,dinov3
DEVICE=cpu  # Options: cuda, cpu, mps
GPU_MEMORY_LIMIT=8GB

# Model Paths (HuggingFace model identifiers)
SAM_MODEL_NAME=facebook/sam-vit-huge
MOONDREAM_MODEL_NAME=vikhyatk/moondream2
DINOV3_MODEL_NAME=dinov3_vitl16

# Storage Configuration
STORAGE_BACKEND=local  # Options: local, s3, gcs
STORAGE_PATH=/tmp/geoaiserve
S3_BUCKET=
S3_REGION=us-east-1
GCS_BUCKET=

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100 MB in bytes

# Cache Configuration (Optional)
ENABLE_CACHE=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Job Queue Configuration (Optional)
ENABLE_ASYNC_JOBS=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security Configuration
API_KEY_REQUIRED=false
API_KEYS=
SECRET_KEY=your-secret-key-change-in-production
RATE_LIMIT=100/minute

# Monitoring Configuration (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090
LOG_LEVEL=info  # Options: debug, info, warning, error, critical

# Feature Store Configuration
FEATURE_STORE_BACKEND=zarr  # Options: zarr, memory
FEATURE_STORE_PATH=/tmp/geoaiserve/features
